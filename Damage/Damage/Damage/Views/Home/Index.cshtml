@model List<Damage.IGadget>

<div>
@for (int column = 1; column <= 3; column ++)
{
<span>
    @foreach (var gadget in Model.Where(m => m.UserGadget.Column == column).OrderBy(m => m.UserGadget.Ordinal))
    {
        <div>@Html.Partial("_GadgetFramePartial", gadget)</div>
    }
</span>
}
</div>