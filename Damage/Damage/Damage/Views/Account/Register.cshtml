@model Damage.Models.RegisterModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="add-gadget-button"><span>@Html.ActionLink("Home", "Index", "Home")</span><span>@Html.ActionLink("Contact", "Contact", "Home")</span></div>

<hgroup class="title">
    <h1>Register</h1>
</hgroup>
<section id="loginForm">
    <h2>Create a new local account.</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <fieldset>
            <legend>Registration Form</legend>
            <ol>
                <li>@Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName)
                </li>
                <li>@Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                </li>
                <li>@Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword)
                </li>
            </ol>
            <input type="submit" value="Register" />
        </fieldset>
    }
</section>

<section class="social" id="socialLoginForm">
    <h2>Use another service to register.</h2>
    @Html.Action("ExternalLoginsList", new {ViewBag.ReturnUrl})
</section>

<div class="registration-account-warning">If you are planning on using any gadgets that rely on Google services, it is recommended that you register via Google.</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}