<div>Choose Layout</div>
<div class="layout-choice">
    <div><img src="~/Content/Images/Layouts/ThreeColumnLayout.png"/></div>
    <div> 
    @{
        if(ViewBag.LayoutId==0){
        <input type="radio" name="layout" value="0" id="optThreeColumnLayout" checked="checked"  />
        }
        else
        {
        <input type="radio" name="layout" value="0" id="optThreeColumnLayout" />
        }
    }<label style="display:inline;font-size:1em;font-weight:normal;" for="optThreeColumnLayout">Three Column</label>
    </div>
</div>
